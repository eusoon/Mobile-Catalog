package my.com.infopro.mobile.client.model;

/**
 * Exception raised when a custom value field is invalid
 */
public class CustomValueException extends RuntimeException {
    
    public enum ValidationType {
        REQUIRED, 
        MAX_LENGTH, 
        MIN_LENGTH
    }

    private static final long serialVersionUID = 1L;

    private CustomField customField;
    
    private ValidationType type;
    
    public CustomValueException(CustomField customField, ValidationType type) {
        this.customField = customField;
        this.type = type;
    }
    
    public CustomField getCustomField() {
        return customField;
    }
    
    public ValidationType getValidationType() {
        return type;
    }
    
}
