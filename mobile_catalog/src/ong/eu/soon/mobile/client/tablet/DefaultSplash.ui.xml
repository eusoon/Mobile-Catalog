<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
        <ui:with field="appearance" type="ong.eu.soon.mobile.client.tablet.SplashAppearance"></ui:with>
		<g:SimplePanel ui:field="main" styleName="{appearance.css.main}">
                <g:SimplePanel ui:field="menu" styleName="{appearance.css.menu}">
                </g:SimplePanel>
                <g:SimplePanel ui:field="content" styleName="{appearance.css.content}">
                    <g:Label ui:field="lblTitle" />
                    <ui:image field="splash" resource="logo.png"></ui:image>
                    <g:Label ui:field="lblBriefDescription" />
                </g:SimplePanel>
        </g:SimplePanel>
</ui:UiBinder> 